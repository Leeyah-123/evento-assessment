generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id                String   @id @default(uuid())
  placeId           String?  @unique @map("place_id")
  name              String?
  streetAddress     String?  @map("street_address")
  city              String?
  region            String?
  country           String
  postalCode        String?  @map("postal_code")
  latitude          Float?
  longitude         Float?
  formattedAddress  String?  @map("formatted_address")
  isManuallyEntered Boolean  @default(false) @map("is_manually_entered")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  events            Event[]

  @@map("locations")
}

model Event {
  id            String    @id @default(uuid())
  title         String
  description   String?
  startDate     DateTime  @map("start_date")
  endDate       DateTime? @map("end_date")
  locationId    String    @map("location_id")
  location      Location  @relation(fields: [locationId], references: [id])
  organizerName String    @map("organizer_name")
  organizerEmail String   @map("organizer_email")
  maxAttendees  Int?      @map("max_attendees")
  imageUrl      String?   @map("image_url")
  price         Float?    
  tags          String[]  @default([]) 
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@map("events")
}
